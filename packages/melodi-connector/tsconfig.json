{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "moduleResolution": "bundler",
        "strict": true,
        "declaration": true,
        "sourceMap": true,
        "declarationMap": true,
        "skipLibCheck": true,
        "module": "es2020",
        "outDir": "dist",
        "rootDir": "src",
        "composite": true,
        "incremental": true
    },
    "exclude": [
        "src/node_modules",
        "dist",
        "tsup.config.ts",
    ]
}